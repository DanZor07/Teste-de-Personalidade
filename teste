        // Elementos DOM
        const introContainer = document.getElementById('intro-container');
        const questionContainer = document.getElementById('question-container');
        const paymentContainer = document.getElementById('payment-container');
        const resultContainer = document.getElementById('result-container');
        const progressBar = document.getElementById('progress');
        const questionNumber = document.getElementById('question-number');
        const questionText = document.getElementById('question-text');
        const optionsContainer = document.getElementById('options-container');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const startBtn = document.getElementById('start-btn');
        const payBtn = document.getElementById('pay-btn');
        const restartBtn = document.getElementById('restart-btn');
        const paymentMethods = document.querySelectorAll('.payment-method');
        
        // Vari√°veis de estado
        let currentQuestion = 0;
        let answers = [];
        let selectedPaymentMethod = 'pix';

        // Inicializa√ß√£o
        document.addEventListener('DOMContentLoaded', function() {
            startBtn.addEventListener('click', startTest);
            prevBtn.addEventListener('click', prevQuestion);
            nextBtn.addEventListener('click', nextQuestion);
            payBtn.addEventListener('click', showResult);
            restartBtn.addEventListener('click', restartTest);
            
            // Configurar sele√ß√£o de m√©todo de pagamento
            paymentMethods.forEach(method => {
                method.addEventListener('click', function() {
                    paymentMethods.forEach(m => m.classList.remove('selected'));
                    this.classList.add('selected');
                    selectedPaymentMethod = this.getAttribute('data-method');
                    updatePaymentFields();
                });
            });
        });

        function startTest() {
            introContainer.classList.remove('active');
            questionContainer.classList.add('active');
            showQuestion();
        }

        function showQuestion() {
            const question = questions[currentQuestion];
            questionNumber.textContent = `Pergunta ${currentQuestion + 1} de ${questions.length}`;
            questionText.textContent = question.text;
            
            // Atualizar barra de progresso
            const progressPercentage = ((currentQuestion + 1) / questions.length) * 100;
            progressBar.style.width = `${progressPercentage}%`;
            
            // Limpar op√ß√µes anteriores
            optionsContainer.innerHTML = '';
            
            // Adicionar novas op√ß√µes
            question.options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.classList.add('option');
                if (answers[currentQuestion] === index) {
                    optionElement.classList.add('selected');
                }
                optionElement.textContent = option;
                optionElement.addEventListener('click', () => selectOption(index));
                optionsContainer.appendChild(optionElement);
            });
            
            // Atualizar bot√µes de navega√ß√£o
            prevBtn.disabled = currentQuestion === 0;
            
            if (currentQuestion === questions.length - 1) {
                nextBtn.textContent = 'Finalizar';
            } else {
                nextBtn.textContent = 'Pr√≥xima';
            }
        }

        function selectOption(optionIndex) {
            answers[currentQuestion] = optionIndex;
            
            // Atualizar visualiza√ß√£o das op√ß√µes
            const options = document.querySelectorAll('.option');
            options.forEach((option, index) => {
                if (index === optionIndex) {
                    option.classList.add('selected');
                } else {
                    option.classList.remove('selected');
                }
            });
        }

        function prevQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                showQuestion();
            }
        }

        function nextQuestion() {
            if (answers[currentQuestion] === undefined) {
                alert('Por favor, selecione uma op√ß√£o antes de continuar.');
                return;
            }
            
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                showQuestion();
            } else {
                // Finalizar o teste
                questionContainer.classList.remove('active');
                paymentContainer.classList.add('active');
            }
        }

        function updatePaymentFields() {
            // Esconder todos os campos primeiro
            document.getElementById('pix-fields').style.display = 'none';
            document.getElementById('credit-fields').style.display = 'none';
            document.getElementById('boleto-fields').style.display = 'none';
            
            // Mostrar apenas os campos relevantes
            if (selectedPaymentMethod === 'pix') {
                document.getElementById('pix-fields').style.display = 'block';
            } else if (selectedPaymentMethod === 'credit') {
                document.getElementById('credit-fields').style.display = 'block';
            } else if (selectedPaymentMethod === 'boleto') {
                document.getElementById('boleto-fields').style.display = 'block';
            }
        }

        function showResult() {
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            
            if (!name || !email) {
                alert('Por favor, preencha seu nome e e-mail antes de prosseguir.');
                return;
            }
            
            if (selectedPaymentMethod === 'credit') {
                const cardNumber = document.getElementById('card-number').value;
                const expiry = document.getElementById('expiry').value;
                const cvv = document.getElementById('cvv').value;
                
                if (!cardNumber || !expiry || !cvv) {
                    alert('Por favor, preencha todos os dados do cart√£o.');
                    return;
                }
            }
            
            // Simular processamento do pagamento
            payBtn.textContent = 'Processando...';
            payBtn.disabled = true;
            
            setTimeout(() => {
                paymentContainer.classList.remove('active');
                resultContainer.classList.add('active');
            }, 2000);
        }

        function restartTest() {
            currentQuestion = 0;
            answers = [];
            progressBar.style.width = '0%';
            
            // Limpar formul√°rio de pagamento
            document.getElementById('name').value = '';
            document.getElementById('email').value = '';
            document.getElementById('card-number').value = '';
            document.getElementById('expiry').value = '';
            document.getElementById('cvv').value = '';
            
            // Resetar m√©todo de pagamento para PIX
            paymentMethods.forEach(m => m.classList.remove('selected'));
            document.querySelector('[data-method="pix"]').classList.add('selected');
            selectedPaymentMethod = 'pix';
            updatePaymentFields();
            
            // Resetar bot√£o de pagamento
            payBtn.textContent = 'Pagar R$ 2,00 e Ver Resultado';
            payBtn.disabled = false;
            
            // Voltar para a introdu√ß√£o
            resultContainer.classList.remove('active');
            introContainer.classList.add('active');
        }
    </script>
</body>
</html>
